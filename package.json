{
  "name": "autoboard",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm -r --parallel --filter @autoboard/api --filter @autoboard/web run dev",
    "build": "pnpm -r run build",
    "db:generate": "pnpm --filter @autoboard/db db:generate",
    "db:migrate": "pnpm --filter @autoboard/db db:migrate",
    "db:push": "pnpm --filter @autoboard/db db:push",
    "db:studio": "pnpm --filter @autoboard/db db:studio",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.6.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "jsdom": "^25.0.0",
    "msw": "^2.4.0",
    "vitest": "^2.1.0"
  },
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild"
    ]
  }
}
