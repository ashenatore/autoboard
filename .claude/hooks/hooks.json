{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [{
          "type": "command",
          "command": "node \"/mnt/app-data/dev/autoboard/.claude/hooks/post-edit-typecheck.js\"",
          "async": false,
          "timeout": 30
        }],
        "description": "TypeScript check after edits"
      },
      {
        "matcher": "Edit",
        "hooks": [{
          "type": "command",
          "command": "node \"/mnt/app-data/dev/autoboard/.claude/hooks/post-edit-format.js\"",
          "async": false,
          "timeout": 15
        }],
        "description": "Prettier format after edits"
      },
      {
        "matcher": "Edit",
        "hooks": [{
          "type": "command",
          "command": "node \"/mnt/app-data/dev/autoboard/.claude/hooks/post-edit-console-warn.js\"",
          "async": false,
          "timeout": 10
        }],
        "description": "Warn about console.log statements"
      }
    ]
  }
}
